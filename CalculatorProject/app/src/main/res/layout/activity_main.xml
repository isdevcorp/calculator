<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDisplay"
            android:background="#ffffffff"
            android:padding="5dp" android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button android:text="@string/txtOne" android:id="@+id/btnOne"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtTwo" android:id="@+id/btnTwo"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtThree" android:id="@+id/btnThree"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtDiv" android:id="@+id/btnDiv"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button android:text="@string/txtFour" android:id="@+id/btnFour"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtFive" android:id="@+id/btnFive"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtSix" android:id="@+id/btnSix"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtMul" android:id="@+id/btnMul"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button android:text="@string/txtSeven" android:id="@+id/btnSeven"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtEight" android:id="@+id/btnEight"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtNine" android:id="@+id/btnNine"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtSub" android:id="@+id/btnSub"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <Button android:text="@string/txtClear" android:id="@+id/btnClear"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtZero" android:id="@+id/btnZero"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtReset" android:id="@+id/btnReset"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />
                <Button android:text="@string/txtAdd" android:id="@+id/btnAdd"
                    android:layout_width="wrap_content" android:layout_height="fill_parent"
                    android:layout_weight="1" />

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>
