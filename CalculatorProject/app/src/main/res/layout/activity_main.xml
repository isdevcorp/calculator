<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin" android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtDisplay"
            android:background="#ffffffff"
            android:padding="5dp" android:layout_margin="5dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="4"
            android:layout_gravity="center_horizontal"
            android:alignmentMode="alignMargins">

            <Button android:layout_row="0" android:layout_column="0" android:text="@string/btn1"
                android:layout_gravity="fill_horizontal" android:tag="n1" />
            <Button android:layout_row="0" android:layout_column="1" android:text="@string/btn2"
                android:layout_gravity="fill_horizontal" android:tag="n2" />
            <Button android:layout_row="0" android:layout_column="2" android:text="@string/btn3"
                android:layout_gravity="fill_horizontal" android:tag="n3" />
            <Button android:layout_row="1" android:layout_column="0" android:text="@string/btn4"
                android:layout_gravity="fill_horizontal" android:tag="n4" />
            <Button android:layout_row="1" android:layout_column="1" android:text="@string/btn5"
                android:layout_gravity="fill_horizontal" android:tag="n5" />
            <Button android:layout_row="1" android:layout_column="2" android:text="@string/btn6"
                android:layout_gravity="fill_horizontal" android:tag="n6" />
            <Button android:layout_row="2" android:layout_column="0" android:text="@string/btn7"
                android:layout_gravity="fill_horizontal" android:tag="n7" />
            <Button android:layout_row="2" android:layout_column="1" android:text="@string/btn8"
                android:layout_gravity="fill_horizontal" android:tag="n8" />
            <Button android:layout_row="2" android:layout_column="2" android:text="@string/btn9"
                android:layout_gravity="fill_horizontal" android:tag="n9" />
            <Button android:layout_row="3" android:layout_column="1" android:text="@string/btn0"
                android:layout_gravity="fill_horizontal" android:tag="n0" />

            <Button android:layout_row="0" android:layout_column="3" android:text="@string/btnPlus"
                android:layout_gravity="fill_horizontal" />
            <Button android:layout_row="1" android:layout_column="3" android:text="@string/btnDivide"
                android:layout_gravity="fill_horizontal" />
            <Button android:layout_row="2" android:layout_column="3" android:text="@string/btnMinus"
                android:layout_gravity="fill_horizontal" />
            <Button android:layout_row="3" android:layout_column="2" android:text="@string/btnPlus"
                android:layout_columnSpan="2" android:layout_gravity="fill_horizontal" />

        </GridLayout>

    </LinearLayout>

</RelativeLayout>
